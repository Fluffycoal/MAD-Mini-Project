<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardElevation="4dp"
    app:cardCornerRadius="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/tvVenueName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Venue Name"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#FF6F00"
            tools:text="Venue Name"/>

        <TextView
            android:id="@+id/tvLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Location"
            android:textSize="14sp"
            android:layout_marginTop="4dp"
            tools:text="Location"/>

        <TextView
            android:id="@+id/tvCapacity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Capacity: 100"
            android:textSize="14sp"
            android:layout_marginTop="4dp"
            tools:text="Capacity: 100"/>

        <TextView
            android:id="@+id/tvAmenities"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="WiFi, Parking, AC"
            android:textSize="12sp"
            android:textColor="@android:color/darker_gray"
            android:layout_marginTop="4dp"
            tools:text="WiFi, Parking, AC"/>

        <TextView
            android:id="@+id/tvPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="KES 5000/day"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#FF6F00"
            android:layout_marginTop="8dp"
            tools:text="KES 5000/day"/>

        <LinearLayout
            android:id="@+id/layoutOwnerControls"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp"
            android:visibility="gone"
            tools:visibility="visible">

            <Button
                android:id="@+id/btnViewReviews"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:text="Reviews"
                android:textColor="#FF6F00"  android:textSize="14sp" />

            <Button
                android:id="@+id/btnEdit"
                style="@style/Widget.Material3.Button.TonalButton"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:text="Edit"
                android:textSize="14sp" />

            <Button
                android:id="@+id/btnDelete"
                style="@style/Widget.Material3.Button.TonalButton"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Delete"
                android:textSize="14sp" />
        </LinearLayout>

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>